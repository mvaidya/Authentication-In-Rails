<%= render :partial => 'shared/jumbo_title', :locals => {:title => 'Log In'} %>

<div class="well">
  <div class="row-fluid">
    <div class="span6">
      <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-horizontal'}) do |f| %>
          <div class="inputs">
            <%= f.input :email, :required => false, :autofocus => true %>
            <%= f.input :password, :required => false %>
            <%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Log in", :class => 'btn btn-primary btn-large' %>
            <%= link_to "Cancel", :back, :class => 'btn btn-danger btn-mini' %>
          </div>
      <% end %>

      <%= render "links" %>
    </div>
    <div class="span1">OR</div>
    <div class="span3">
      <p>
        <%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook), :class=>'btn btn-facebook btn-large' %>
      </p>
      <p>
        <%= link_to "Sign in with Twitter", user_omniauth_authorize_path(:twitter), :class=>'btn btn-twitter btn-large' %>
      </p>
    </div>
  </div>

</div>